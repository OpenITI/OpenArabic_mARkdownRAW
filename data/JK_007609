# % وخِلالاً تكذِّبُ الكَلِمَ العَوْ % راءَ فيهمْ أو اللسّانَ البَذِيّا
~~% % 18
# % ' وترى وعدهمْ وبذلهمُ الأم % % والَ هذا نزراً وذاك سنيّا ' % 19
# % يضعفُ المرءُ منهمُ في يدِ الحقْ % وإن كان فى اللّقاءِ قويّا % % 20
# % وتراهُ الوَقاحَ في حَوْمَةِ الحرْ % بِ وفي حَوْمَةِ السؤالِ حَيِيّا
~~% % PageV01P1575 21
# % لا رعى اللهُ لى متى لم يجد عه % % دهمُ فى جوانحى مرعيّا % % 22
# % أنا من قد علمت لا أركبُ الظّه % % رَ الموطّا حتّى يكون عليّا % % 23
# % وإذا جانبٌ منَ الأرض لم يس % % طِعْ مقامي استطعتُ عنه مُضِيّا % % 24
# % ومتى ما اقتضَى كلاميَ أمرٌ % لم أكنْ بالمقالِ فيه عَيِيّا % %
~~PageV01P1576 البحر : بسيط تام 1
# % يا حاملَ الكأس ناوِلْني مُشَعشَعةً % لم تقرِ همّاً ولا بخلاً بواديها
~~% % 2
# % أحسرْ بها غيهبَ الأحوانِ عن فكرى % % فكم ليالٍ بها زيّدتْ واريها % %
~~3
# % لم أدرِ لمّا امتطَتْها كفُّ حاملها % % أحلَّتِ الكأسَ أم خَدَّيْ
~~مُعاطيها % % 4
# % وعائبٍ لمشيبي وهْوَ لابِسُهُ % ولم يَعِبْ حُلَّةً في النّاسِ كاسِيها
~~% % 5
# % لم يدرِ أنَّ مشيبَ الرّأسِ من فِكَري % % لم يَسْرِ رَكْبُ مشيبٍ في
~~نواحيها % % 6
# % أليس ينقص يوماً فى ذراً لهمُ % ماءُ الشّباب غزيرٌ فى عزاليها ؟ % 7
# % وما الفناءُ بموقوفٍ على حدثٍ % والنّابُ في الذُّوْدِ أغْنَى من
~~حَواشيها % % 8
# % وعاذلٍ من صنيعٍ قد تدرّعه % % وليس يَشْفي منَ الأمراضِ شاكيها % % 9
# % طويتُ كشحى َّ عنه ثمّ قلتُ له : % ما العيشُ إنْ جَنَحَتْ نفسي
~~لِلاحيها % % 10
# % دَعْني أنَلْ من زماني بعضَ لَذَّتِهِ % فقد وثقتُ بأنّ الدّهرَ يفريها
~~% % PageV01P1577 11
# % وكيفَ آنسُ بالدُّنيا ولستُ أرى % % إلاّ امرءاً قد تعرَّى مِن
~~عَواريها ؟ % 12
# % كأنّها غصّةٌ حلّتْ بمبلعها % % أوْ كالقَذاةِ أقامتْ في مآقيها % % 13
# % ' نصبوا ' إليها بآمالٍ مخيّبةٍ % كأنّنا ما نرى عقبى أمانيها % % 14
# % فى وحشةِ الدّار ممّنْ كان يسكنها % % كلُّ اعتبارٍ لمن قد ظلّ يأويها
~~% % 15
# % لا تكذِبنَّ فما قلبي لها وطنٌ % وقد رأيتُ طلولاً من مغانيها % % 16
# % كم قد ركبتُ إلى العلياءِ ظهرَ فَلاً % تضلُّ فيه قَطاةٌ عن مَجاثيها %
~~% 17
# % وقفرةٍ تُنكرُ الأنْسُ الوحوشَ بها % % ولايُرجِّي ورودَ الماءِ صاديها
~~% % 18
# % إذا تراختْ ركابى عن مهامها % % ركبتُ فيها اعتزاماً لا يباليها % % 19
# % هانتْ على َّ مخوفاتُ الخطوبِ فما % % أَثْني يمينيَ عن قُصْوَى
~~مَراقيها % % 20
# % كأنّما قد نعى الدّنيا مخلّدها % % أوْ في يديَّ أمانٌ من لياليها % %
~~PageV01P1578 21
# % ' ومنْ تكنْ ' نفسهُ لم يملها جزعٌ % فزجرُ مُهْرِك في الهيجاءِ ماليها
~~% % 22
# % وإنْ تكنْ لم تَذَرْ كُثْرَ الأنامِ لها % % قُلاًّ فشِلْوُ هَزيلِ
~~الجَنْبِ كافيها % % 23
# % نفسي تنازعُني حالاً يضيقُ لها % % عَرضُ البلادِ فمن لي مِن تَقاضيها
~~؟ % 24
# % لقد دَعَتْ سامعاً لم تَكْدَ دعوتُهُ % وطالبتْ بعظيمٍ مَنْ يُؤاتيها ؟
~~% 25
# % أقْلِلْ لديَّ بأنباءِ الزَّمانِ فما % % أهابُ نفسي لأنّي لا
~~أُرَجِّيها % % 26
# % لا تجتنِ العزَّ إلاّ من حدائقهِ % فكم رياضٍ عراضٍ خاب جانيها % % 27
# % ما عزّ من ذلَّ فى تطلابِ عزّتهِ % مجاوِرُ النّارِ من قُرٍّ كصاليها %
~~% 28
# % إنَّ المعالى َ لا تعطيك صهوتها % % وما سعتْ لك رجلٌ فى مساعيها % %
~~29
# % لم تَنتَهِزْ مادَنا من فرعِ دَوِحتِها % % فكيفَ تَسمو إلى مافي
~~أقاصيها ؟ % PageV01P1579 البحر : خفيف تام 1
# % يا خليلي أراك منْ شَغفِ الحبْ % بِ خَلِيّاً وأنتَ تُلحي عليهِ % 2
# % لو هداني إلى سُلُوِّي سُلُوٌّ % منك فى الحبِّ لاهتديتُ إليهِ % 3
# % بأبى منْ يودّ قلبى بأنْ أم % % سيتُ وحدى مقبّلاً شفتيهِ % 4
# % والذى نشرُ كلِّ طيبٍ ذكى ٍّ % فى ندًى يستفادُ من نفحتيهِ % 5
# % وغزالٍ وقعتُ لمّا تعاطي % % تُ فراراً منَ الهوى في يَدَيْهِ % 6
# % أنْكَرَتْ عينُهُ ادَّعاءَ سَقامي % % كم سقامٍ فى باطنى لمْ تريهِ %
